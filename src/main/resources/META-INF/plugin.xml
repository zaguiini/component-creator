<idea-plugin>
    <id>com.toptal.davinci</id>
    <name>Davinci</name>
    <version>0.0.1</version>
    <vendor email="luisfelipe.zaguini@toptal.com">Luis Felipe Zaguini</vendor>
    <description>Create a new component, page, or module via Davinci CLI</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="201.0" />

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>
    <depends>JavaScript</depends>
    <extensions defaultExtensionNs="com.intellij">
<!--        <intentionAction>-->
<!--            <className>com.toptal.ComponentSuggestion</className>-->
<!--            <category>Component suggestion</category>-->
<!--        </intentionAction>-->
    </extensions>

    <actions>
        <action id="com.toptal.ComponentGenerator" class="com.toptal.ComponentGenerator" text="Component"
                description="Create a new component">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
        <action id="com.toptal.ModuleGenerator" class="com.toptal.ModuleGenerator" text="Module"
                description="Create a new module">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
        <action id="com.toptal.PageGenerator" class="com.toptal.PageGenerator" text="Page"
                description="Create a new page">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>